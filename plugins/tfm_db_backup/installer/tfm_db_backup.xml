<?xml version="1.0" encoding="utf8"?>
<xtcommerceplugin>
    <title>DB-Backup-Plugin</title>
    <version>1.0.0</version>
    <code>tfm_db_backup</code>
    <url>http://www.4tfm.de</url>
	<developer>4tfm</developer>
    <type>extension</type>
    <icon>4tfm.jpg</icon>
    <plugin_code>
        <code>
            <hook>store_main.php:bottom</hook>
            <phpcode>
                <![CDATA[
                    include(_SRV_WEBROOT._SRV_WEB_PLUGINS.'tfm_db_backup/hooks/store_main_php_bottom.php');
                ]]></phpcode>
            <order>1</order>
            <active>1</active>
        </code>
        <code>
            <hook>cronjob.php:main</hook>
            <phpcode>
                <![CDATA[
                    include(_SRV_WEBROOT._SRV_WEB_PLUGINS.'tfm_db_backup/hooks/cronjob.phpmain.php');
                ]]></phpcode>
            <order>1</order>
            <active>1</active>
        </code>
        <code>
			<hook>admin_dropdown.php:dropdown</hook>
			<phpcode>
				<![CDATA[
					include(_SRV_WEBROOT._SRV_WEB_PLUGINS.'tfm_db_backup/hooks/admin_dropdown.php_dropdown.php');
				]]></phpcode>
			<order>1</order>
			<active>1</active>
		</code>		
    </plugin_code>
    <configuration>
        <config>
            <key>TFM_DB_BACKUP_MODE</key>
            <type>dropdown</type>
            <value>exec</value>
            <url>plg_tfm_db_backup_mode</url>
            <de>
                <title>Modus</title>
            </de>
            <en>
                <title>Mode</title>
            </en>
        </config>		
    </configuration>
</xtcommerceplugin>
